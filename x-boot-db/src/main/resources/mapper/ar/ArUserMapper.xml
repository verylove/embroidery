    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        create_time,
        modify_time,
        create_by,
        modify_by,
        account, phone, password, sex, icon, profile, `identity`, province, city, county, per_address, work_num, work_place, sign_id, name_id, store_id, sign_status, name_status, store_status, wx_open_id, qq_open_id, per_level, active_num, charm_num, wealth_num, balance, great_status, sentiment_num, praise_num, focus_num, follow_num,pay_pass
    </sql>

    <select id="findAllByIdIn" resultMap="BaseResultMap" parameterType="java.util.List">
        SELECT <include refid="Base_Column_List"/>
        FROM cx_ar_user
        WHERE id IN
        <foreach collection="list" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </select>

    <select id="findAllByConditions" resultMap="BaseResultMap" parameterType="java.util.Map">
        SELECT <include refid="Base_Column_List"/>
        FROM cx_ar_user u
        <where>
            <if test="account != null">
                u.account like concat(concat('%',#{account}),'%')
            </if>
            <if test="phone != null">
                and u.phone like concat(concat('%',#{phone}),'%')
            </if>
            <if test="startDate!=null">
                AND u.create_time <![CDATA[ >= ]]> #{startDate}
            </if>
            <if test="endDate!=null">
                AND u.create_time <![CDATA[ <= ]]> #{endDate}
            </if>
            <if test="identity !=null and identity !=-1 ">
                AND u.identity= #{identity}
            </if>
        </where>
    </select>

